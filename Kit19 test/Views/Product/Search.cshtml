@model ProductSearchView

<h2>Product List</h2>

<!-- Search Panel -->
<form asp-controller="Product" asp-action="Search" method="post">
    <!-- Search criteria fields -->
    <input asp-for="ProductName" placeholder="Product Name" />
    <input asp-for="Size" placeholder="Size" />
    <input asp-for="Price" placeholder="Price" />
    <input asp-for="MfgDate" placeholder="Manufacturing Date" />
    <input asp-for="Category" placeholder="Category" />
    <button type="submit">Search</button>
    <a asp-action="Index" asp-controller="Product">Clear</a>
</form>

<!-- Table displaying products -->
<table class="table">
    <tr>
        <th>Product Name</th>
        <th>Size</th>
        <th>Price</th>
        <th>Manufacturing Date</th>
        <th>Category</th>
    </tr>
    @foreach (var product in Model.SearchResults)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.Size</td>
            <td>@product.Price</td>
            <td>@product.MfgDate.ToShortDateString()</td>
            <td>@product.Category</td>
        </tr>
    }
</table>
