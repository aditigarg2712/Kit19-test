        <tbody>
            @foreach (var product in Model.SearchResults)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.Size</td>
                    <td>@product.Price</td>
                    <td>@product.MfgDate.ToShortDateString()</td>
